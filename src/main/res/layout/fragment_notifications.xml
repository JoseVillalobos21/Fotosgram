<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- CardView que contiene la informaciÃ³n de los combates -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                android:background="@drawable/card_border"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/text_notifications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"/>

                    <!-- Fecha y hora alineados -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Fecha a la izquierda -->
                        <TextView
                            android:id="@+id/lblFecha"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:gravity="start"/>

                        <!-- Hora a la derecha -->
                        <TextView
                            android:id="@+id/lblHorario"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:gravity="end"/>
                    </LinearLayout>

                    <!-- Combate 1 -->
                    <LinearLayout
                        android:id="@+id/combate1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:id="@+id/lblIzquierda1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/vs" />

                        <TextView
                            android:id="@+id/lblDerecha1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- Combate 2 -->
                    <LinearLayout
                        android:id="@+id/combate2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:id="@+id/lblIzquierda2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/vs" />

                        <TextView
                            android:id="@+id/lblDerecha2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- Combate 3 -->
                    <LinearLayout
                        android:id="@+id/combate3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:id="@+id/lblIzquierda3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/vs" />

                        <TextView
                            android:id="@+id/lblDerecha3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- Combate 4 -->
                    <LinearLayout
                        android:id="@+id/combate4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:id="@+id/lblIzquierda4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/vs" />

                        <TextView
                            android:id="@+id/lblDerecha4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>